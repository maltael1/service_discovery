  </thead>

  <tbody>
    <% @service.service_registrations.each do |service_registration| %>
      <tr>
        <td><%= service_registration.id %></td>
        <td><%= service_registration.status %></td>
        <td><%= service_registration.host %></td>
        <td><%= service_registration.gate_host %></td>
