

<% action = service.new_record? ? 'Create' : 'Update' %>
<%= form_with(model: service, local: true) do |form| %>
  <div class="form-group row">
     <%= form.label :host, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-5">
      <%= form.text_field :host, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
     <%= form.label :gate_host, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-5">
      <%= form.text_field :gate_host, class: 'form-control' %>
    </div>
  </div>
    <div class="form-group row">
     <%= form.label :status, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-5">
      <%= form.text_field :status, class: 'form-control', readonly: true %>
    </div>
  </div>
  <div class="form-group row">
     <%= form.label :token, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-5">
      <%= form.text_field :token, class: 'form-control', readonly: true %>
    </div>
  </div>

  <%= form.submit action, class: 'btn btn-primary' %>
<% end %>