<% action = service.new_record? ? 'Create' : 'Update' %>
<%= form_with(model: service, local: true) do |form| %>
  <div class="form-group row">
     <%= form.label :name, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-5">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
     <%= form.label :code, class: 'col-sm-2 col-form-label'%>
    <div class="col-sm-5">
      <%= form.text_field :code, class: 'form-control' %>
    </div>
  </div>

  <%= form.submit action, class: 'btn btn-primary' %>
<% end %>